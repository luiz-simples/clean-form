{
  "env": { "es6": true },
  "parser": "babel-eslint",
  "plugins": ["react"],
  "extends": [ "standard", "standard-react" ],
  "globals": {
    "it": false,
    "jest": false,
    "test": false,
    "expect": false,
    "describe": false,
    "afterAll": false,
    "beforeEach": false,
    "beforeAll": false
  },
  "rules": {
    "no-throw-literal": 1,
    "strict": [2, "never"],
    "semi": [2, "never"],
    "quotes": [2, "single"],
    "no-var": 1,
    "eol-last": 1,
    "no-undef": "error",
    "no-new-require": 1,
    "no-sync": 1,
    "no-mixed-requires": [1, false],
    "no-unsafe-finally": 0,
    "no-useless-computed-key": 0,
    "jsx-quotes": ["error", "prefer-double"],
    "react/jsx-uses-react": 1,
    "react/jsx-no-undef": 2,
    "react/jsx-sort-props": 0,
    "react/jsx-sort-prop-types": 0,
    "react/jsx-no-bind": 0,
    "react/prop-types": [1, {"skipUndeclared": true}],
    "standard/object-curly-even-spacing": ["error", "never"]
  }
}
